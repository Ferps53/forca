void ver_palavras_disponiveis() {
  FILE *palavras_adicionadas = fopen("palavras_adicionadas.txt", "rb");
  if(palavras_adicionadas == NULL) {
    printf("Erro na abertura do arquivo\n");
    exit(1);
  }
}

char* pegar_palavras(){
  char *palavra;
  scanf( "%s", *palavra);
  printf("%s", *palavra);
  return palavra;
}
